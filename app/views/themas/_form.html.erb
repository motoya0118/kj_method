<%= form_with(model: thema, local: true) do |form| %>
  <% if thema.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(thema.errors.count, "error") %> 下記のエラーが発生したため登録に失敗しました:</h2>

      <ul>
        <% thema.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-100 containar">
    <div class="border-bottom border-2 border-dark mx-auto pb-3 text-center">
      <span class="h3 text-danger">　　入力必須項目</span>
      <div class="form-group row">
        <div class="input-group justify-content-center align-items-center">
          <%= form.label :name ,value='テーマ名', class: 'h3 input-group-prepend' %>
          <%= form.text_area :name , class: 'w-50', rows: 2, maxlength: 30 , placeholder:"テーマ名を入力して下さい"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="input-group justify-content-center align-items-center input-group-prepend">
          <%= form.label :purpose, velue='目的　　' ,class: 'h3'%>
          <%= form.text_area :purpose , class: 'w-50', rows:4, maxlength: 60 , placeholder:"目的を入力してください"%>
        </div>
      </div>
    </div>
    <%= form.fields_for :questions do | question | %>
      <%= render "themas/question_fields", f: question %>
    <% end %>
  
    <div class="text-center m-3">
      <%= link_to_add_association "質問を追加", form, :questions , class: 'btn btn-warning me-5'%>
      <%= form.submit value='送信',class: 'btn btn-primary ms-5'%>
    </div>
  </div>
<% end %>
